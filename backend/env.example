# Application Settings
APP_NAME=cosmere-api
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# Server Settings
HOST=0.0.0.0
PORT=8000
RELOAD=True

# Database Settings
DATABASE_URL=postgresql://username:password@localhost:5432/cosmere_db
DATABASE_TEST_URL=postgresql://username:password@localhost:5432/cosmere_test_db

# Redis Settings (for caching)
REDIS_URL=redis://localhost:6379/0
REDIS_TEST_URL=redis://localhost:6379/1

# Elasticsearch Settings (for search)
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX=cosmere

# Security Settings
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5176

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# API Settings
API_V1_STR=/api/v1
PROJECT_NAME=Cosmere API
PROJECT_DESCRIPTION=A comprehensive API for exploring Brandon Sanderson's Cosmere universe 